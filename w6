#include <iostream>
using namespace std;

int main() {
    setlocale(0, "");
    double sum = 0.0;
    int count = 0;
    double x;

    while (true) {
        cout << "Введите число: ";
        if (!(cin >> x))
            return 0;
        if (x == 0.0)
            break;      
        sum += x;
        ++count;
    }

    if (count == 0) {
        cout << "Ни одного числа не введено." << endl;
    }
    else {
        double avg = sum / count;
        cout << "Среднее арифметическое: " << avg << endl;
    }

    return 0;
}

