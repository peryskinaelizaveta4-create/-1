#include <iostream>
using namespace std;

int main() {
    setlocale(0, "");
    int n, sum = 0;
    cout << "Введите число: ";
    if (!(cin >> n))
        return 0;
    while (n != 0) {
        sum += n;
        cout << "Введите число: ";
        if (!(cin >> n))
            break;
    }
    cout << "Сумма: " << sum << endl;
    return 0;
}
