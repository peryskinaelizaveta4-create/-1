#include <iostream>
#include <iomanip>

using namespace std;

int main() {
    setlocale(0, "");
    const int SIZE = 5;
    double numbers[SIZE];

    cout << "=== Программа работы с массивами ===\n" << endl;
    cout << "Введите " << SIZE << " чисел для массива:\n" << endl;

    for (int i = 0; i < SIZE; i++) {
        cout << "Число " << i + 1 << ": ";
        cin >> numbers[i];
    }

    cout << "\n=== Результаты операций ===\n" << endl;

    for (int tableNum = 0; tableNum < SIZE; tableNum++) {
        cout << "| Таблица: " << tableNum + 1 << "    |" << endl;
        cout << "|---|" << endl;
        cout << "| Число    | Пример    | Результат    |" << endl;
        cout << "|---|---|---|" << endl;

        double num = numbers[tableNum];

        for (int operation = 0; operation < 4; operation++) {
            cout << "|    " << fixed << setprecision(0) << num << "    |    ";

            switch (operation) {
            case 0:
                cout << num << " + " << num << "    |    "
                    << num + num << "    |";
                break;

            case 1:
                cout << num << " - " << num << "    |    "
                    << num - num << "    |";
                break;

            case 2:
                cout << num << " / " << num << "    |    ";
                if (num != 0) {
                    cout << num / num << "    |";
                }
                else {
                    cout << "∞    |";
                }
                break;

            case 3:
                cout << num << " * " << num << "    |    "
                    << num * num << "    |";
                break;
            }
            cout << endl;
        }
        cout << endl << endl;
    }

    return 0;
}
